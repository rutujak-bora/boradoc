{
    "name": "boradoc-root",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "start": "npm start --workspace=backend",
        "client": "npm run dev --workspace=frontend",
        "dev": "concurrently \"npm run start --workspace=backend\" \"npm run dev --workspace=frontend\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,magenta\"",
        "build": "npm run build --workspace=frontend",
        "lint": "npm run lint --workspace=frontend",
        "test": "npm run test --workspace=frontend"
    },
    "devDependencies": {
        "concurrently": "^9.0.0"
    }
}